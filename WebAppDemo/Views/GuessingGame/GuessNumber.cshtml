@{
    ViewData["Title"] = "GuessNumber";
}

<h1>Guess the number</h1>

<div class="GuessNumberCheat">
    <h3>(underlätta kollen av genererat number)</h3>
    <p style="color:yellow">@ViewBag.test</p>
</div>

<h3>Guess Result</h3>
<p>@ViewBag.guessResult</p>
<form asp-controller="GuessingGame" asp-action="GuessNumber" method="post">
    <label>Guess a number between 1 and 100:</label>
    <input type="number" name="guessedNumber" />
    <input type="submit" value="Enter guess" />
</form>