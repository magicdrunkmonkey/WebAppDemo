@model IEnumerable<WebAppDemo.Models.PersonModel>

@{
    ViewData["Title"] = "People";
}

<h1>People</h1>
<br />
<h4>Find person:</h4>
<form asp-controller="People" asp-action="People" method="post">
    <label>Search by name:</label>
    <input type="number" name="Name" />
    <label>Search by city:</label>
    <input type="number" name="City" />
    <input type="submit" value="Enter Search" />
</form>
<br />
<h4>Add person:</h4>
<form asp-controller="People" asp-action="People" method="post">
    <label>Person ID:</label>
    <input type="number" name="CreatePersonViewModel" />
    <label>Name:</label>
    <input type="text" name="CreatePersonViewModel" />
    <label>Phone Number:</label>
    <input type="number" name="CreatePersonViewModel" />
    <label>City:</label>
    <input type="text" name="CreatePersonViewModel" />
    <input type="submit" value="Create Person" />
</form>
<br />
