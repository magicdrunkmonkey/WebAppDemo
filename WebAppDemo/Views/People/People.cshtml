@model IEnumerable<WebAppDemo.Models.PersonModel>

@{
    ViewData["Title"] = "People";
}


<h1>People</h1>
@mode WebAppDemo.PeopleViewModel
<form asp-controller="People" asp-action="FindPerson" method="post">
    <label asp-for="Name">Enter search </label>
    <input asp-for="Name" />
    <input type="submit" value="Enter search" />
</form>

<form asp-controller="People" asp-action="CreatePerson" method="post">
    <label asp-for="Name"> </label>
    <input asp-for="Name" />
    <label asp-for="PhoneNumber"> </label>
    <input asp-for="PhoneNumber" />
    <label asp-for="City"> </label>
    <input asp-for="City" />
    <input type="submit" value="Create Person" />
</form>
